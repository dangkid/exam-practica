## Dockerfile.ubnginx - Servidor web Nginx sobre ubsecurity
FROM ubsecurity:latest

LABEL maintainer="dangelo@hlc.com"
LABEL description="Servidor web Nginx"

# Instalar Nginx
RUN apt-get update && apt-get install -y \
    nginx \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Configurar Nginx
RUN echo 'server {\n    listen 80;\n    server_name localhost;\n\n    location / {\n        proxy_pass http://ubreact:3000;\n        proxy_http_version 1.1;\n        proxy_set_header Upgrade $http_upgrade;\n        proxy_set_header Connection "upgrade";\n        proxy_set_header Host $host;\n        proxy_cache_bypass $http_upgrade;\n    }\n\n}' > /etc/nginx/sites-available/default

EXPOSE 80 5724

# Script de inicio
RUN echo '#!/bin/bash\nservice nginx start\nservice ssh start\ntail -f /dev/null' > /start-nginx.sh && \
    chmod +x /start-nginx.sh

CMD ["/start-nginx.sh"]
# Dockerfile.ubnginx - Servidor web Nginx sobre ubsecurity
FROM ubsecurity:latest

LABEL maintainer="dangelo@hlc.com"
LABEL description="Servidor web Nginx"

# Instalar Nginx
RUN apt-get update && apt-get install -y \
    nginx \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Configurar Nginx
RUN echo 'server {\n\
    listen 80;\n\
    server_name localhost;\n\
    \n\
    location / {\n\
        proxy_pass http://ubreact:3000;\n\
        proxy_http_version 1.1;\n\
        proxy_set_header Upgrade $http_upgrade;\n\
        proxy_set_header Connection "upgrade";\n\
        proxy_set_header Host $host;\n\
        proxy_cache_bypass $http_upgrade;\n\
    }\n\
}' > /etc/nginx/sites-available/default

EXPOSE 80 5724

# Script de inicio
RUN echo '#!/bin/bash\nservice nginx start\nservice ssh start\ntail -f /dev/null' > /start-nginx.sh && \
    chmod +x /start-nginx.sh

CMD ["/start-nginx.sh"]
