# Capa Nginx - Servidor web sobre ubsecurity
FROM ubsecurity:latest

# Instalar Nginx
RUN apt-get update && apt-get install -y \
    nginx \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# ConfiguraciÃ³n Nginx para SPA
RUN echo 'server {\n\
    listen 80;\n\
    server_name _;\n\
\n\
    root /var/www/html;\n\
    index index.html;\n\
\n\
    location / {\n\
        try_files $uri /index.html;\n\
    }\n\
\n\
    location ~* \\\.(?:css|js|jpg|jpeg|gif|png|svg|ico|ttf|woff|woff2)$ {\n\
        expires 1y;\n\
        add_header Cache-Control "public, immutable";\n\
    }\n\
}' > /etc/nginx/sites-available/default

EXPOSE 80 22

# Script de inicio
RUN echo '#!/bin/bash\nservice nginx start\nservice ssh start\ntail -f /dev/null' > /start-nginx.sh && \
    chmod +x /start-nginx.sh

CMD ["/start-nginx.sh"]
