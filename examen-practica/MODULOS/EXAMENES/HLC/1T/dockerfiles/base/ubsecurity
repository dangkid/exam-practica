# Dockerfile.ubsecurity - Capa de seguridad sobre ubbase
FROM ubbase:latest

# Instalar openssh-server y herramientas de seguridad
RUN apt-get update && apt-get install -y \
    openssh-server \
    fail2ban \
    ufw \
    sudo \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Configurar SSH
# Usar -p para no fallar si ya existe (evita error en builds repetidos)
RUN mkdir -p /var/run/sshd || true
RUN echo 'root:rootpassword' | chpasswd
RUN sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config
RUN sed -i 's/#Port 22/Port 5724/' /etc/ssh/sshd_config

# Exponer puerto SSH personalizado
EXPOSE 5724

# Script de inicio
RUN echo '#!/bin/bash\nservice ssh start\ntail -f /dev/null' > /start.sh && \
    chmod +x /start.sh

CMD ["/start.sh"]
